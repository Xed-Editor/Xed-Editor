{
  "comments": {
    "lineComment": ";",
    "blockComment": [
      "/*",
      "*/"
    ]
  },
  "brackets": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ]
  ],
  "autoClosingPairs": [
    {
      "open": "{",
      "close": "}"
    },
    {
      "open": "[",
      "close": "]"
    },
    {
      "open": "(",
      "close": ")"
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": [
        "string"
      ]
    },
    {
      "open": "'",
      "close": "'",
      "notIn": [
        "string"
      ]
    }
  ],
  "autoClosingOvertype": [
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ],
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ]
  ],
  "surroundingPairs": [
    {
      "open": "{",
      "close": "}"
    },
    {
      "open": "[",
      "close": "]"
    },
    {
      "open": "(",
      "close": ")"
    },
    {
      "open": "\"",
      "close": "\""
    },
    {
      "open": "'",
      "close": "'"
    }
  ],
  "folding": {
    "offSide": false,
    "markers": {
      "start": "^\\s*;\\s*#region\\b",
      "end": "^\\s*;\\s*#endregion\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(\\.\\w+:|\\w+:|[%]?\\w+\\s+macro\\b|%macro\\b|%if|%ifdef|%ifndef|%ifidn|%ifmacro|%rep\\b|\\.if\\b|\\.repeat\\b|\\bsegment\\b|\\bsection\\b).*$",
    "decreaseIndentPattern": "^\\s*(\\.\\w+:|\\w+:|%endmacro\\b|%endif\\b|%endrep\\b|\\.endif\\b|\\.until\\b|\\bendsegment\\b|\\bendsection\\b).*$"
  },
  "wordPattern": "[a-zA-Z_$][a-zA-Z0-9_$]*",
  "onEnterRules": [
    {
      "beforeText": "^\\s*;",
      "action": {
        "indent": "none",
        "appendText": "; "
      }
    },
    {
      "beforeText": "^\\s*(\\.\\w+:|\\w+:)",
      "action": {
        "indent": "none"
      }
    }
  ]
}